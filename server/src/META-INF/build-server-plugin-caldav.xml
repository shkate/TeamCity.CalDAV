<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-autowire="constructor">

  <!--
      The AutowiredAnnotationBeanPostProcessor and CommonAnnotationBeanPostProcessor are both
      included implicitly when using the component-scan element.
      That means that the two components are autodetected and  wired together
  -->
  <context:component-scan base-package="org.teamcity.caldav"/>

  <bean id="apiController" class="org.teamcity.caldav.CalDAVController"/>

  <bean id="caldavDataProvider" class="org.teamcity.caldav.data.DataProvider"/>

  <bean id="requestPathTransformInfo" class="org.teamcity.caldav.RequestPathTransformInfo"/>

  <bean id="schedulerTab" class="org.teamcity.caldav.ui.SchedulerTab"/>
</beans>